<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:local="clr-namespace:CupidArrow">

  <Style TargetType="{x:Type local:RightArrow}">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type local:RightArrow}">
          <Border Width="{TemplateBinding Width}" Height="{TemplateBinding Height}">
            <Path Name="PART_RightArrow" Fill="{TemplateBinding RightArrowFill}" />
          </Border>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <Style TargetType="{x:Type local:LeftArrow}">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type local:LeftArrow}">
          <Border Width="{TemplateBinding Width}" Height="{TemplateBinding Height}">
            <Path Name="PART_LeftArrow" Fill="{TemplateBinding LeftArrowFill}" />
          </Border>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>